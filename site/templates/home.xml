<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:desktop>
				<header>
					<h1><cms:text constant="header_title"/></h1>
				</header>
			</cms:desktop>

			<cms:mobile>
				<header>
					<div class="menu">
						<a
							href="'tel:'.urlencode(Language::getText('phone'))"
							cms:eval="href"
							class="phone"
							>
						</a>
					</div>

					<h1><cms:text constant="header_title"/></h1>
				</header>
			</cms:mobile>

			<div class="form_wrap">
				<h3><cms:text constant="form_title"/></h3>
				<cms:module
					name="contact_form"
					action="show"
					text_id="contact_form"
					/>

			</div>

			<div class="procedure">
				<cms:module
					name="articles"
					action="show"
					text_id="procedure_article"
					template="parts/article.xml"
					/>

				<div class="video_container">
						<cms:module
							name="youtube"
							action="show"
							text_id="optimal_video"
							template="parts/video.xml"
							/>

				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					template="parts/article_heading.xml"
					/>


				<cms:module
					name="articles"
					action="show_group"
					text_id="treatment_group"
					template="parts/show_articles.xml"

				/>


			</div>

			<cms:desktop>
				<div class="bottom">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_article"
						template="parts/article.xml"
						/>

					<span><cms:text constant="form_title"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</cms:desktop>
			<cms:mobile>
				<div class="bottom">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_article"
						template="parts/article.xml"
						/>

				</div>

				<div class="form_bottom">
					<span><cms:text constant="form_title"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</cms:mobile>

			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>

		</body>
	</html>
</document>
